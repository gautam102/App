<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MainActivity"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/vitalsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vitals" />

        <Button
            android:id="@+id/symptomsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms" />

        <Button
            android:id="@+id/bloodReportsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Reports" />

        <Button
            android:id="@+id/urinalysisButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urinalysis" />

        <Button
            android:id="@+id/viewPatientsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Patients" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>